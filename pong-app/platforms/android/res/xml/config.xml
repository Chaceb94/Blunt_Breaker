    <preference name="loglevel" value="DEBUG" />
    <name>Pong</name>
    <description>
        Cordova app which plays pong.
    </description>
    <author email="chaceb94@gmail.com" href="http://chacebutterworth.tk">
        Chace Butterworth
    </author>
    <content src="index.html" />
